  <nav>
    <button onclick="showTab('clicker')">–ö–ª–∏–∫–µ—Ä</button>
    <button onclick="showTab('roulette')">–†—É–ª–µ—Ç–∫–∞</button>
    <button onclick="showTab('inventory')">–ò–Ω–≤–µ–Ω—Ç–∞—Ä—å</button>
    <button onclick="showTab('shop')">–ú–∞–≥–∞–∑–∏–Ω</button>
  </nav>  <div id="clicker" class="tab active">
    <h2>–õ–∏—Å—Ç–ö–æ–∏–Ω—ã: <span id="coins">0</span></h2>
    <img id="leaf" src="leaf.png" onclick="clickLeaf()">
  </div>  <div id="roulette" class="tab">
    <h2>–†—É–ª–µ—Ç–∫–∞</h2>
    <div class="wheel" id="wheel"></div>
    <button id="spinBtn" onclick="spinWheel()">–ö—Ä—É—Ç–∏—Ç—å</button>
    <p>–ë–µ—Å–ø–ª–∞—Ç–Ω–∞—è –ø–æ–ø—ã—Ç–∫–∞: <span id="freeSpin"></span></p>
  </div>  <div id="inventory" class="tab">
    <h2>–ò–Ω–≤–µ–Ω—Ç–∞—Ä—å</h2>
    <ul id="inventoryList"></ul>
  </div>  <div id="shop" class="tab">
    <h2>–ú–∞–≥–∞–∑–∏–Ω</h2>
    <button onclick="buyAutoclicker()">–ê–≤—Ç–æ–∫–ª–∏–∫–µ—Ä (1 –ª–∏—Å—Ç/—Å–µ–∫) ‚Äî 1,000,000 –ª–∏—Å—Ç–∫–æ–∏–Ω–æ–≤</button><br>
    <button onclick="buyUpgrade()">–£—Å–∏–ª–µ–Ω–∏–µ –∫–ª–∏–∫–∞ (+4/–∫–ª–∏–∫) ‚Äî 2,000,000 –ª–∏—Å—Ç–∫–æ–∏–Ω–æ–≤</button>
  </div>  <script>
    let coins = parseInt(localStorage.getItem('coins')) || 0;
    let clickPower = parseInt(localStorage.getItem('clickPower')) || 1;
    let hasAutoclicker = localStorage.getItem('autoclicker') === 'true';
    let inventory = JSON.parse(localStorage.getItem('inventory')) || [];
    let lastFreeSpin = localStorage.getItem('lastFreeSpin') || 0;

    document.getElementById('coins').innerText = coins;

    function showTab(tabId) {
      document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
      document.getElementById(tabId).classList.add('active');
    }

    function clickLeaf() {
      coins += clickPower;
      update();
    }

    function buyAutoclicker() {
      if (coins >= 1000000 && !hasAutoclicker) {
        coins -= 1000000;
        hasAutoclicker = true;
        localStorage.setItem('autoclicker', 'true');
        update();
      }
    }

    function buyUpgrade() {
      if (coins >= 2000000 && clickPower === 1) {
        coins -= 2000000;
        clickPower = 4;
        localStorage.setItem('clickPower', clickPower);
        update();
      }
    }

    function update() {
      document.getElementById('coins').innerText = coins;
      localStorage.setItem('coins', coins);
    }

    function saveInventory() {
      localStorage.setItem('inventory', JSON.stringify(inventory));
    }

    function refreshInventory() {
      const list = document.getElementById('inventoryList');
      list.innerHTML = '';
      inventory.forEach(item => {
        const li = document.createElement('li');
        li.textContent = item;
        list.appendChild(li);
      });
    }

    if (hasAutoclicker) {
      setInterval(() => {
        coins += clickPower;
        update();
      }, 1000);
    }

    function spinWheel() {
      const now = new Date().toDateString();
      if (lastFreeSpin !== now) {
        lastFreeSpin = now;
        localStorage.setItem('lastFreeSpin', now);
      } else if (coins >= 100000) {
        coins -= 100000;
      } else {
        alert('–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –∫–æ–∏–Ω–æ–≤ –∏ –Ω–µ—Ç –±–µ—Å–ø–ª–∞—Ç–Ω–æ–≥–æ –≤—Ä–∞—â–µ–Ω–∏—è');
        return;
      }

      const rnd = Math.random() * 100;
      let prize = 0;
      if (rnd < 0.0003) {
        prize = '–ó–æ–ª–æ—Ç–æ–π –ü–µ–ø–µ';
        inventory.push(prize);
        saveInventory();
        refreshInventory();
      } else if (rnd < 11.5003) prize = 2000;
      else if (rnd < 51.5003) prize = 10000;
      else if (rnd < 76.5003) prize = 100000;
      else prize = 500000;

      if (typeof prize === 'number') coins += prize;
      update();
    }

    document.getElementById('freeSpin').innerText = (new Date().toDateString() !== lastFreeSpin) ? '–î–æ—Å—Ç—É–ø–Ω–∞' : '–ù–µ—Ç';
    refreshInventory();
  </script></body>
