<body>
  <div class="header">–í–∞—à–µ –¥–µ—Ä–µ–≤–æ —Ä–∞—Å—Ç—ë—Ç</div>
  <div class="balance" id="balance">–õ–∏—Å—Ç–∫–æ–∏–Ω–æ–≤: 0</div>  <div class="content" id="clicker-tab">
    <div class="leaf" onclick="tapLeaf()"></div>
  </div>  <div class="content hidden" id="wheel-tab">
    <div class="gift-box">
      <div id="wheel-img"></div>
      <div id="wheel-result">–ü—Ä–æ–∫—Ä—É—Ç–∏ –∫–æ–ª–µ—Å–æ!</div>
      <button onclick="spinWheel()" id="spin-button">–ö—Ä—É—Ç–∏—Ç—å</button>
    </div>
  </div>  <div class="content hidden" id="gifts-tab">
    <div class="gift-box" id="gifts-list">–í—ã –µ—â—ë –Ω–∏—á–µ–≥–æ –Ω–µ –≤—ã–∏–≥—Ä–∞–ª–∏</div>
  </div>  <div class="content hidden" id="shop-tab">
    <div class="shop-item">
      <div>–ê–≤—Ç–æ–∫–ª–∏–∫–µ—Ä (+1/—Å–µ–∫)</div>
      <button onclick="buyAutoClicker()">–ö—É–ø–∏—Ç—å –∑–∞ 1,000,000</button>
    </div>
    <div class="shop-item">
      <div>+4 –∑–∞ –∫–ª–∏–∫</div>
      <button onclick="buyClickPower()">–ö—É–ø–∏—Ç—å –∑–∞ 2,000,000</button>
    </div>
  </div>  <div class="tabs">
    <div class="tab active" onclick="showTab('clicker')">üåø –ö–ª–∏–∫–µ—Ä</div>
    <div class="tab" onclick="showTab('wheel')">üé° –†—É–ª–µ—Ç–∫–∞</div>
    <div class="tab" onclick="showTab('gifts')">üéÅ –ü–æ–¥–∞—Ä–∫–∏</div>
    <div class="tab" onclick="showTab('shop')">üõçÔ∏è –ú–∞–≥–∞–∑–∏–Ω</div>
  </div>  <script>
    let balance = +localStorage.getItem('balance') || 0;
    let clickPower = +localStorage.getItem('clickPower') || 1;
    let autoClick = localStorage.getItem('autoClick') === 'true';
    let lastFreeSpin = localStorage.getItem('lastFreeSpin') || '';

    const balanceEl = document.getElementById('balance');
    const giftsList = document.getElementById('gifts-list');
    const spinButton = document.getElementById('spin-button');
    const wheelResult = document.getElementById('wheel-result');

    updateBalance();
    checkDailySpin();

    function updateBalance() {
      balanceEl.innerText = `–õ–∏—Å—Ç–∫–æ–∏–Ω–æ–≤: ${balance.toLocaleString()}`;
      localStorage.setItem('balance', balance);
    }

    function tapLeaf() {
      balance += clickPower;
      updateBalance();
    }

    function buyAutoClicker() {
      if (autoClick) return alert("–£–∂–µ –∫—É–ø–ª–µ–Ω–æ!");
      if (balance >= 1000000) {
        balance -= 1000000;
        autoClick = true;
        localStorage.setItem('autoClick', true);
        setInterval(() => {
          balance += clickPower;
          updateBalance();
        }, 1000);
        updateBalance();
      } else alert("–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —Å—Ä–µ–¥—Å—Ç–≤");
    }

    function buyClickPower() {
      if (clickPower > 1) return alert("–£–∂–µ –∫—É–ø–ª–µ–Ω–æ!");
      if (balance >= 2000000) {
        balance -= 2000000;
        clickPower = 4;
        localStorage.setItem('clickPower', clickPower);
        updateBalance();
      } else alert("–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —Å—Ä–µ–¥—Å—Ç–≤");
    }

    function checkDailySpin() {
      const today = new Date().toDateString();
      if (lastFreeSpin !== today) {
        spinButton.innerText = "–ö—Ä—É—Ç–∏—Ç—å (–ë–ï–°–ü–õ–ê–¢–ù–û)";
        spinButton.dataset.free = "true";
      } else {
        spinButton.innerText = "–ö—Ä—É—Ç–∏—Ç—å –∑–∞ 100000";
        spinButton.dataset.free = "false";
      }
    }

    function spinWheel() {
      const isFree = spinButton.dataset.free === "true";
      if (!isFree && balance < 100000) return alert("–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –ª–∏—Å—Ç–∫–æ–∏–Ω–æ–≤!");
      if (!isFree) balance -= 100000;

      const random = Math.random() * 100;
      let result;
      if (random <= 0.0003) result = 'pepe';
      else if (random <= 11.5003) result = 2000;
      else if (random <= 51.5003) result = 10000;
      else if (random <= 76.5003) result = 100000;
      else result = 500000;

      document.getElementById('wheel-img').style.animation = 'spin 1s linear';
      setTimeout(() => {
        document.getElementById('wheel-img').style.animation = '';

        if (result === 'pepe') {
          giftsList.innerHTML = `<img src="/mnt/data/file-S1pf5SwV41Xd6tZRidVfHm" width="100"><br>–ü–æ–¥–∞—Ä–æ–∫: –ó–æ–ª–æ—Ç–æ–π –ü–µ–ø–µ`;
          wheelResult.innerHTML = `–í—ã –≤—ã–∏–≥—Ä–∞–ª–∏ –ó–æ–ª–æ—Ç–æ–≥–æ –ü–µ–ø–µ! ‚ú®`;
        } else {
          balance += result;
          updateBalance();
          wheelResult.innerHTML = `–í—ã –≤—ã–∏–≥—Ä–∞–ª–∏ ${result.toLocaleString()} –ª–∏—Å—Ç–∫–æ–∏–Ω–æ–≤!`;
        }

        if (isFree) {
          lastFreeSpin = new Date().toDateString();
          localStorage.setItem('lastFreeSpin', lastFreeSpin);
          spinButton.innerText = "–ö—Ä—É—Ç–∏—Ç—å –∑–∞ 100000";
          spinButton.dataset.free = "false";
        }

      }, 1000);
    }

    if (autoClick) {
      setInterval(() => {
        balance += clickPower;
        updateBalance();
      }, 1000);
    }

    function showTab(name) {
      document.querySelectorAll('.content').forEach(e => e.classList.add('hidden'));
      document.getElementById(`${name}-tab`).classList.remove('hidden');
      document.querySelectorAll('.tab').forEach(e => e.classList.remove('active'));
      event.target.classList.add('active');
    }
  </script></body>
